<link href="../style/styles_pilos.css" rel="stylesheet" >
<link href="../style/bootstrap_pilos.css" rel="stylesheet">
<link href="../style/sweetalert.css" rel="stylesheet">

<meta http-equiv="Expires" content="0" />
<meta http-equiv="Pragma" content="no-cache" />


<body name="prueba">
    <div class="container">
        <div class="row">
            <h2>REPORTE GENERAL DE ESTUDIANTES</h2>
            <h3>Por favor seleccione los campos deseados para el reporte</h3>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <form role="form" id="formulario">
                    <div class="row">
                        <div class="col-lg-2 col-md-2">
                          <fieldset id="poblacion">
                            <legend>Especifique la población:</legend>
                            <label class="label_pilos" for="cohorte">Cohorte:</label>
                            <select name="cohorte" id="cohorte" class="select_index">
                              <option value="TODOS">TODOS</option>
                            </select><br>
                            <div id="divgroup">
                              <label class="label_pilos" for="grupo">Grupo: </label>
                              <select  name="grupo" id="grupo">
                                <option value="TODOS" selected>TODOS</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                              </select><br>
                            </div>
                            <label class="label_pilos" for="estado">Estado: </label>
                            <select name="estado" id="estado">
                              <option value="ACTIVO">Activo</option>
                              <option value="APLAZADO">Aplazado</option>
                              <option value="RETIRADO">Retirado</option>
                              <option value="EGRESADO">Egresado</option>
                              <option value="TODOS">TODOS</option>
                              </select><br>
                            <div id="divenfasis">
                            <label class="label_pilos" for="enfasis">Enfasis: </label>
                              <select name="enfasis" id="enfasis">
                                <option value="TODOS">TODOS</option>
                                <option value="NO REGISTRA">NO REGISTRA</option>
                              </select>
                            </div>
                          </fieldset>
                        </div>

                        <div class="col-lg-2 col-md-2">
                          <fieldset id="camposBase">
                            <legend>Datos Base</legend>
                              <input type="checkbox" name="chk[]" value="Código" onchange="check(this)" onclick="check(this)" checked="checked">Código<br>
                              <input type="checkbox" name="chk[]" value="Nombre" onchange="check(this)" onclick="check(this)" checked="checked">Nombres<br>
                              <input type="checkbox" name="chk[]" value="Apellidos" onchange="check(this)" onclick="check(this)" checked="checked">Apellidos<br>
                              <input type="checkbox" name="chk[]" value="Documento" onchange="check(this)" onclick="check(this)" checked="checked">Documento<br>
                              <input type="checkbox" name="chk[]" value="Grupo" disabled>Grupo<br>
                              <input type="checkbox" name="chk[]" value="Estado">Estado<br>
                          </fieldset>
                        </div>

                        <div class="col-lg-3 col-md-3">
                          <fieldset id="camposContacto">
                            <legend><input type="checkbox">Datos de Contacto</legend>
                              <input type="checkbox" name="chk[]" value="Email">Correo Electrónico<br>
                              <input type="checkbox" name="chk[]" value="Celular">Celular<br>
                              <input type="checkbox" name="chk[]" value="Dirección">Dirección<br>
                          </fieldset>
                        </div>

                        <div class="col-lg-3 col-md-3">
                          <fieldset id="camposAcudiente">
                            <legend><input type="checkbox">Datos de Acudiente</legend>
                              <input type="checkbox" name="chk[]" value="Nombre acudiente">Nombre<br>
                              <input type="checkbox" name="chk[]" value="Celular acudiente">Celular<br>
                          </fieldset>
                        </div>
                        <div class="col-lg-2 col-md-2">
                          <fieldset id="riesgo">
                            <legend>Riesgo</legend>
                              <input type="checkbox" name="chk_risk[]" value="academic_risk">Académico<br>
                              <input type="checkbox" name="chk_risk[]" value="social_risk">Socioeducativo<br>
                          </fieldset>
                        </div>
                    </div>
                    <div class="row">                
                      <div class="col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
                        <center><input type="button" value = "Generar Reporte" id="btn-send-indexform" formmethod="post" disabled/></center>
                      </div>
                    </div>
                </form>
            </div>

          <div class="row" id="div_table">
             
          </div>
        </div>
      </body>

        <script type="text/javascript"> 
          function check(a) 
          { 
              a.checked='checked'; 
          } 
        </script> 
